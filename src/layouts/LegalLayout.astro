---
import { type Language } from '../i18n/translations';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  lang: Language;
}

const { title, lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <title>{title} | Clientky</title>
  </head>
  <body class="bg-dark text-text-primary font-sans">
    <Header lang={lang} />
    
    <main class="pt-24 pb-16">
      <div class="max-w-4xl mx-auto px-6">
        <slot />
      </div>
    </main>
    
    <Footer lang={lang} />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'DM Sans', system-ui, sans-serif;
    background: #0a0a0f;
    color: #f8fafc;
  }

  body {
    min-height: 100vh;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
  }

  .legal-content h1 {
    font-family: 'Outfit', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #f8fafc;
  }

  .legal-content h2 {
    font-family: 'Outfit', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #f8fafc;
  }

  .legal-content h3 {
    font-family: 'Outfit', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #f8fafc;
  }

  .legal-content p {
    margin-bottom: 1rem;
    color: #cbd5e1;
  }

  .legal-content ul, .legal-content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: #cbd5e1;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

  .legal-content a {
    color: #00d4ff;
    text-decoration: underline;
  }

  .legal-content a:hover {
    color: #B794F4;
  }

  .legal-content .update-date {
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }

  .legal-content .highlight {
    background: rgba(183, 148, 244, 0.1);
    border-left: 3px solid #B794F4;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 0 0.5rem 0.5rem 0;
  }
</style>

