---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Detect language from referrer or default to English
const lang = 'en';
---

<Layout 
  title="404 - Page Not Found | Clientky"
  description="The page you're looking for doesn't exist."
  lang={lang}
>
  <Header lang={lang} />
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-dark">
      <div class="absolute inset-0 bg-grid-pattern opacity-20"></div>
      <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] bg-accent-purple/10 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-accent-cyan/10 rounded-full blur-[150px]"></div>
    </div>
    
    <div class="relative z-10 text-center px-6 py-20">
      <!-- 404 Number -->
      <h1 class="font-display font-bold text-[8rem] md:text-[12rem] leading-none gradient-text mb-4">
        404
      </h1>
      
      <!-- Message -->
      <h2 class="font-display font-semibold text-2xl md:text-3xl text-text-primary mb-4">
        Page Not Found
      </h2>
      <p class="text-text-muted text-lg max-w-md mx-auto mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl bg-gradient-to-r from-accent-cyan to-accent-purple text-white font-semibold transition-all hover:shadow-xl hover:shadow-accent-cyan/25 hover:scale-[1.02]"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go to Homepage
        </a>
        <a 
          href="/#contact"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl border border-dark-200 text-text-primary font-semibold hover:border-accent-cyan/50 hover:bg-dark-50 transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Us
        </a>
      </div>
      
      <!-- Spanish Option -->
      <p class="mt-12 text-text-muted text-sm">
        ¿Prefieres español? <a href="/es/" class="text-accent-cyan hover:underline">Ir a la versión en español</a>
      </p>
    </div>
  </main>
  <Footer lang={lang} />
</Layout>






