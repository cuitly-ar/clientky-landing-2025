---
interface Props {
  variant?: 'light' | 'dark';
}

const { variant = 'light' } = Astro.props;

const brandLogos = [
  { alt: 'IKEA', src: '/logos/ikea-logo.png' },
  { alt: 'Gymshark', src: '/logos/gymshark-logo.png' },
  { alt: 'Nutribullet', src: '/logos/nutribullet-black-44px.png' },
  { alt: 'Conair', src: '/logos/conair-black-44px.png' },
  { alt: 'Revolut', src: '/logos/revolut-logo.png' },
  { alt: 'Rockport', src: '/logos/rockport-black-44px.png' }
];

const imageClass =
  variant === 'dark'
    ? 'h-8 w-auto opacity-90 brightness-200 drop-shadow-lg'
    : 'h-8 w-auto opacity-75';
---

<div class="overflow-hidden">
  <div class="brand-marquee flex items-center gap-12 animate-marquee">
    {[...brandLogos, ...brandLogos].map((logo, index) => (
      <img
        src={logo.src}
        alt={logo.alt}
        class={imageClass}
        loading={index === 0 ? 'eager' : 'lazy'}
      />
    ))}
  </div>
</div>

<style is:global>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
    width: max-content;
  }
</style>





