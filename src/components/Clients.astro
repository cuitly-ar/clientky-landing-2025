---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const clients = [
  { name: 'Client 1', logo: '/logos/clientes/LOGO01_2.jpg' },
  { name: 'Client 2', logo: '/logos/clientes/LOGO03.jpg' },
  { name: 'Client 3', logo: '/logos/clientes/LOGO04.jpg' },
  { name: 'Client 4', logo: '/logos/clientes/LOGO05.jpg' },
  { name: 'Client 5', logo: '/logos/clientes/LOGO06.jpg' },
  { name: 'Client 6', logo: '/logos/clientes/LOGO08.jpg' },
];
---

<section class="relative py-20 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark-50">
    <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
    <div class="section-orb absolute top-0 left-1/4 w-[500px] h-[300px] bg-accent-cyan/5 rounded-full"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-12 animate-on-scroll">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-dark-100 border border-dark-300 mb-4">
        <svg class="w-4 h-4 text-accent-emerald" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="text-accent-emerald font-mono text-sm uppercase tracking-wider">{t.clients.tag}</span>
      </div>
      
      <h2 class="font-display font-bold text-2xl md:text-3xl text-text-primary mb-3">
        {t.clients.title}
      </h2>
      
      <p class="text-text-muted max-w-2xl mx-auto">
        {t.clients.subtitle}
      </p>
    </div>
    
    <!-- Clients Marquee -->
    <div class="relative overflow-hidden">
      <!-- Gradient Masks -->
      <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-dark-50 to-transparent z-10"></div>
      <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-dark-50 to-transparent z-10"></div>
      
      <!-- Scrolling Container -->
      <div class="flex items-center gap-12 animate-marquee">
        {[...clients, ...clients].map((client, index) => (
          <div 
            class="flex-shrink-0 flex items-center justify-center w-32 h-20 p-4 rounded-xl bg-white/5 border border-dark-200"
          >
            <img 
              src={client.logo} 
              alt={client.name}
              class="max-h-12 max-w-full object-contain filter brightness-90"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  
  .animate-marquee:hover {
    animation-play-state: paused;
  }
</style>

