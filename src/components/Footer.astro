---
import { getTranslations, type Language } from '../i18n/translations';
import { getAlternateLanguage, getLocalizedPath, getLanguageName } from '../i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const alternateLang = getAlternateLanguage(lang);

const locations = [
  'Argentina',
  'Mexico',
  'Colombia',
  'Chile',
  'Canada',
  'United States of America',
  'United Kingdom',
];
---

<footer class="relative bg-dark-50 pt-20 pb-8 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12 mb-16">
      
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-4 lg:col-span-2">
        <!-- Logo -->
        <a href={lang === 'en' ? '/' : '/es'} class="inline-flex items-center gap-3 mb-6">
          <img 
            src="/logos/logo-sinfondo.png" 
            alt="Clientky" 
            class="h-10 w-auto"
          />
          <span class="font-display font-semibold text-2xl text-text-primary">Clientky</span>
        </a>
        
        <p class="text-text-muted mb-6 max-w-sm leading-relaxed">
          {t.footer.description}
        </p>
        
        <!-- Locations -->
        <div class="mb-6">
          <p class="text-xs text-text-muted uppercase tracking-wider mb-3">
            {lang === 'en' ? 'We operate in' : 'Operamos en'}
          </p>
          <div class="flex flex-wrap gap-x-4 gap-y-1">
            {locations.map((location) => (
              <span class="text-sm text-text-secondary">{location}</span>
            ))}
          </div>
        </div>
        
        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <a 
            href="https://linkedin.com/company/clientky" 
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-xl bg-dark-100 border border-dark-300 flex items-center justify-center text-text-muted hover:text-accent-cyan hover:border-accent-cyan/30 hover:bg-accent-cyan/10 transition-all"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Solutions Column -->
      <div>
        <h4 class="font-display font-semibold text-text-primary mb-5 text-sm uppercase tracking-wider">
          {t.footer.sections.solutions}
        </h4>
        <ul class="space-y-3">
          <li>
            <a href="#services" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.strategy}
            </a>
          </li>
          <li>
            <a href="#services" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.platforms}
            </a>
          </li>
          <li>
            <a href="#services" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.ai}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Company Column -->
      <div>
        <h4 class="font-display font-semibold text-text-primary mb-5 text-sm uppercase tracking-wider">
          {t.footer.sections.company}
        </h4>
        <ul class="space-y-3">
          <li>
            <a href="#about" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.about}
            </a>
          </li>
          <li>
            <a href="#approach" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.approach}
            </a>
          </li>
          <li>
            <a href={lang === 'en' ? '/careers' : '/es/carreras'} class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {lang === 'en' ? 'Careers' : 'Carreras'}
            </a>
          </li>
          <li>
            <a href="#contact" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {t.footer.links.contact}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Connect Column -->
      <div>
        <h4 class="font-display font-semibold text-text-primary mb-5 text-sm uppercase tracking-wider">
          {t.footer.sections.connect}
        </h4>
        <ul class="space-y-3">
          <li>
            <a href="#contact" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              {lang === 'en' ? 'Contact Form' : 'Formulario de Contacto'}
            </a>
          </li>
          <li>
            <a href="https://linkedin.com/company/clientky" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-accent-cyan transition-colors text-sm">
              LinkedIn
            </a>
          </li>
        </ul>
        
        <!-- Language Switcher -->
        <div class="mt-6 pt-6 border-t border-dark-200">
          <p class="text-xs text-text-muted uppercase tracking-wider mb-3">
            {lang === 'en' ? 'Language' : 'Idioma'}
          </p>
          <div class="flex flex-col gap-2">
            <a 
              href="/"
              class={`flex items-center gap-2 text-sm ${lang === 'en' ? 'text-accent-cyan' : 'text-text-muted hover:text-text-primary'} transition-colors`}
            >
              <span>ðŸ‡ºðŸ‡¸</span>
              <span>English</span>
              {lang === 'en' && (
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
            <a 
              href="/es"
              class={`flex items-center gap-2 text-sm ${lang === 'es' ? 'text-accent-cyan' : 'text-text-muted hover:text-text-primary'} transition-colors`}
            >
              <span>ðŸ‡ªðŸ‡¸</span>
              <span>EspaÃ±ol</span>
              {lang === 'es' && (
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              )}
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-dark-200">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <!-- Copyright -->
        <p class="text-sm text-text-muted order-2 md:order-1">
          {t.footer.copyright}
        </p>
        
        <!-- Legal Links -->
        <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 order-1 md:order-2">
          <a href={lang === 'en' ? '/privacy' : '/es/privacidad'} class="text-sm text-text-muted hover:text-text-primary transition-colors">
            {t.footer.links.privacy}
          </a>
          <a href={lang === 'en' ? '/terms' : '/es/terminos'} class="text-sm text-text-muted hover:text-text-primary transition-colors">
            {t.footer.links.terms}
          </a>
          <a href={lang === 'en' ? '/terms-of-use' : '/es/uso'} class="text-sm text-text-muted hover:text-text-primary transition-colors">
            {t.footer.links.termsOfUse}
          </a>
          <a href={lang === 'en' ? '/security' : '/es/seguridad'} class="text-sm text-text-muted hover:text-text-primary transition-colors">
            {t.footer.links.security}
          </a>
          <a href={lang === 'en' ? '/cookies' : '/es/cookies'} class="text-sm text-text-muted hover:text-text-primary transition-colors">
            {t.footer.links.cookies}
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Gradient Line at Bottom -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-cyan via-accent-purple to-accent-emerald"></div>
</footer>
