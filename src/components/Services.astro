---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const services = [
  {
    id: 'strategy',
    data: t.services.strategy,
    icon: 'compass',
    gradient: 'from-accent-cyan to-blue-500',
    accentColor: 'accent-cyan',
  },
  {
    id: 'platforms',
    data: t.services.platforms,
    icon: 'database',
    gradient: 'from-accent-purple to-pink-500',
    accentColor: 'accent-purple',
  },
  {
    id: 'ai',
    data: t.services.ai,
    icon: 'brain',
    gradient: 'from-accent-emerald to-teal-500',
    accentColor: 'accent-emerald',
  },
];
---

<section id="services" class="relative py-24 md:py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark">
    <div class="absolute inset-0 bg-grid-pattern opacity-20"></div>
    <div class="section-orb absolute top-1/2 left-0 w-[600px] h-[600px] bg-accent-cyan/5 rounded-full"></div>
    <div class="section-orb absolute bottom-0 right-0 w-[600px] h-[600px] bg-accent-purple/5 rounded-full"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <!-- Tag -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-dark-100 border border-dark-300 mb-6 animate-on-scroll animate-fade-in-up">
        <span class="text-accent-purple font-mono text-sm uppercase tracking-wider">{t.services.tag}</span>
      </div>
      
      <!-- Title -->
      <h2 class="font-display font-bold text-3xl md:text-4xl lg:text-5xl text-text-primary mb-6 animate-on-scroll animate-fade-in-up">
        {t.services.title}
      </h2>
      
      <!-- Subtitle -->
      <p class="text-lg text-text-secondary animate-on-scroll animate-fade-in-up">
        {t.services.subtitle}
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="space-y-20">
      {services.map((service, index) => (
        <div class={`grid lg:grid-cols-2 gap-12 lg:gap-16 items-start ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
          
          <!-- Service Info Card -->
          <div class={`animate-on-scroll ${index % 2 === 0 ? 'animate-slide-in-left' : 'animate-slide-in-right lg:col-start-2'}`}>
            <div class="relative p-8 md:p-10 rounded-3xl bg-dark-50 border border-dark-200 overflow-hidden group hover:border-dark-100 transition-all duration-500">
              <!-- Gradient Accent -->
              <div class={`absolute top-0 left-0 w-full h-1 bg-gradient-to-r ${service.gradient}`}></div>
              
              <!-- Glow Effect - Hidden on mobile for performance -->
              <div class={`hidden md:block absolute top-0 right-0 w-64 h-64 bg-${service.accentColor}/5 rounded-full blur-[60px] transition-all duration-500 group-hover:bg-${service.accentColor}/10`}></div>
              
              <!-- Icon & Title -->
              <div class="relative flex items-start gap-5 mb-6">
                <div class={`flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br ${service.gradient} flex items-center justify-center shadow-lg`}>
                  {service.icon === 'compass' && (
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                  )}
                  {service.icon === 'database' && (
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                    </svg>
                  )}
                  {service.icon === 'brain' && (
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="font-display font-bold text-2xl md:text-3xl text-text-primary mb-2">
                    {service.data.title}
                  </h3>
                  <p class={`text-${service.accentColor} font-medium`}>
                    {service.data.tagline}
                  </p>
                </div>
              </div>
              
              <!-- Description -->
              <p class="relative text-text-secondary leading-relaxed mb-8">
                {service.data.description}
              </p>
              
              <!-- Details Grid -->
              <div class="relative grid md:grid-cols-3 gap-6">
                <!-- Challenges -->
                <div class="space-y-3">
                  <h4 class="font-semibold text-text-primary text-sm uppercase tracking-wider flex items-center gap-2">
                    <span class="w-5 h-5 rounded-full bg-red-500/20 flex items-center justify-center">
                      <svg class="w-3 h-3 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    {service.data.challenges.title}
                  </h4>
                  <ul class="space-y-2">
                    {service.data.challenges.items.map((item) => (
                      <li class="flex items-start gap-2 text-sm text-text-muted">
                        <span class="mt-1.5 w-1 h-1 rounded-full bg-text-muted flex-shrink-0"></span>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <!-- What We Do -->
                <div class="space-y-3">
                  <h4 class="font-semibold text-text-primary text-sm uppercase tracking-wider flex items-center gap-2">
                    <span class={`w-5 h-5 rounded-full bg-${service.accentColor}/20 flex items-center justify-center`}>
                      <svg class={`w-3 h-3 text-${service.accentColor}`} fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    {service.data.work.title}
                  </h4>
                  <ul class="space-y-2">
                    {service.data.work.items.map((item) => (
                      <li class="flex items-start gap-2 text-sm text-text-muted">
                        <span class={`mt-1.5 w-1 h-1 rounded-full bg-${service.accentColor} flex-shrink-0`}></span>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <!-- Results -->
                <div class="space-y-3">
                  <h4 class="font-semibold text-text-primary text-sm uppercase tracking-wider flex items-center gap-2">
                    <span class="w-5 h-5 rounded-full bg-accent-emerald/20 flex items-center justify-center">
                      <svg class="w-3 h-3 text-accent-emerald" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    {service.data.results.title}
                  </h4>
                  <ul class="space-y-2">
                    {service.data.results.items.map((item) => (
                      <li class="flex items-start gap-2 text-sm text-text-muted">
                        <svg class="mt-0.5 w-4 h-4 text-accent-emerald flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Visual Side -->
          <div class={`hidden lg:flex items-center justify-center animate-on-scroll ${index % 2 === 0 ? 'animate-slide-in-right' : 'animate-slide-in-left lg:col-start-1 lg:row-start-1'}`}>
            <div class="relative w-full max-w-md aspect-square">
              <!-- Decorative circles -->
              <div class={`absolute inset-0 rounded-full border border-${service.accentColor}/20 animate-pulse`} style="animation-duration: 4s;"></div>
              <div class={`absolute inset-8 rounded-full border border-${service.accentColor}/30`}></div>
              <div class={`absolute inset-16 rounded-full border border-${service.accentColor}/40`}></div>
              
              <!-- Center Icon -->
              <div class="absolute inset-0 flex items-center justify-center">
                <div class={`w-32 h-32 rounded-3xl bg-gradient-to-br ${service.gradient} flex items-center justify-center shadow-2xl animate-float`}>
                  {service.icon === 'compass' && (
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                  )}
                  {service.icon === 'database' && (
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                    </svg>
                  )}
                  {service.icon === 'brain' && (
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  )}
                </div>
              </div>
              
              <!-- Orbiting Elements -->
              <div class="absolute top-4 right-8 w-12 h-12 rounded-xl bg-dark-100 border border-dark-300 flex items-center justify-center animate-float" style="animation-delay: 1s;">
                <svg class={`w-6 h-6 text-${service.accentColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              
              <div class="absolute bottom-8 left-4 w-12 h-12 rounded-xl bg-dark-100 border border-dark-300 flex items-center justify-center animate-float" style="animation-delay: 2s;">
                <svg class={`w-6 h-6 text-${service.accentColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              
              <div class="absolute bottom-16 right-0 w-12 h-12 rounded-xl bg-dark-100 border border-dark-300 flex items-center justify-center animate-float" style="animation-delay: 0.5s;">
                <svg class={`w-6 h-6 text-${service.accentColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>


