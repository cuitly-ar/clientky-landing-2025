---
import { getLanguage, t } from '../i18n/utils';

const lang = getLanguage(Astro.url);
const pricingHref = '#precios';
const heroImage = '/media/hero/insta-locknotification.png';
const heroAlt =
  lang === 'en'
    ? 'Clientky notification panel highlighting secure Instagram growth'
    : 'Panel de notificaciones Clientky destacando el crecimiento seguro en Instagram';
---

<section id="inicio" class="relative pt-32 pb-20 md:pt-40 md:pb-32 bg-gradient-to-br from-gray-50 via-purple-50 to-gray-100 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path fill="#7C3AED" fill-opacity="0.2" d="M0,160L48,149.3C96,139,192,117,288,122.7C384,128,480,160,576,165.3C672,171,768,149,864,138.7C960,128,1056,128,1152,138.7C1248,149,1344,171,1392,181.3L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </div>

  <div class="container mx-auto px-6 lg:px-20">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-12 relative z-10">
      <!-- Hero Text -->
      <div class="flex-1 text-center lg:text-left max-w-2xl">
        <h1 id="hero-title" class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          {t(lang, 'heroTitle')}
        </h1>
        <p id="hero-description" class="text-lg sm:text-xl text-gray-600 mb-8">
          {t(lang, 'heroDescription')}
        </p>
        
        <!-- Platform Tabs -->
        <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4 mb-8">
          <button 
            class="platform-tab active flex items-center justify-center gap-3 px-8 py-4 bg-white border-2 border-primary rounded-full font-semibold shadow-md hover:shadow-lg transition-all duration-300 bg-gradient-to-r from-purple-600 to-pink-600 text-white"
            data-platform="instagram"
            aria-label={t(lang, 'instagram')}
          >
            <span class="text-2xl">ðŸ“¸</span>
            <span>{t(lang, 'instagram')}</span>
          </button>
          <button 
            class="platform-tab flex items-center justify-center gap-3 px-8 py-4 bg-white border-2 border-gray-300 rounded-full font-semibold shadow-md hover:shadow-lg hover:border-primary transition-all duration-300"
            data-platform="tiktok"
            aria-label={t(lang, 'tiktok')}
          >
            <span class="text-2xl">ðŸŽµ</span>
            <span>{t(lang, 'tiktok')}</span>
          </button>
        </div>
        
        <!-- CTA Button -->
        <div class="flex justify-center lg:justify-start mb-10">
          <a href={pricingHref} class="inline-flex items-center justify-center bg-gradient-to-r from-primary to-secondary text-white px-10 py-4 rounded-2xl font-semibold shadow-lg hover:scale-105 hover:shadow-xl transition-all duraciÃ³n-300 ease-in-out">
            {t(lang, 'startNow')}
          </a>
        </div>
        
        <!-- Features -->
        <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-6 flex-wrap">
          {[t(lang, 'heroHighlight1'), t(lang, 'heroHighlight2'), t(lang, 'heroHighlight3')].map((item) => (
            <div class="flex items-center gap-3">
              <div class="w-6 h-6 bg-primary rounded-full flex items-center justify-center text-white text-sm font-bold">âœ“</div>
              <span class="text-gray-700 font-medium">{item}</span>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="flex-1 w-full max-w-lg">
        <div class="relative">
          <div class="absolute -inset-6 bg-gradient-to-r from-primary/20 to-secondary/20 blur-3xl rounded-3xl"></div>
          <img 
            src={heroImage}
            alt={heroAlt}
            class="relative w-full h-auto rounded-3xl shadow-2xl border border-white/60"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Platform tabs functionality
  const platformTabs = document.querySelectorAll('.platform-tab');
  const heroTitle = document.getElementById('hero-title');
  const heroDescription = document.getElementById('hero-description');
  
  // Get language from document
  const lang = document.documentElement.lang === 'en' ? 'en' : 'es';
  
  const translations = {
    es: {
      igTitle: 'Impulsa tu Instagram con engagement real',
      igDesc: 'Activa seguidores, likes, views y comentarios autÃ©nticos desde tu dashboard.',
      ttTitle: 'Haz crecer tu TikTok con engagement seguro',
      ttDesc: 'Entrega controlada, proveedores verificados y cero riesgos para tu cuenta.'
    },
    en: {
      igTitle: 'Grow your Instagram with real engagement',
      igDesc: 'Trigger followers, likes, views and comments from your secure dashboard.',
      ttTitle: 'Scale TikTok with safe engagement',
      ttDesc: 'Controlled delivery, verified vendors and zero risk for your account.'
    }
  };
  
  const t = translations[lang as keyof typeof translations] || translations.es;
  
  platformTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Remove active class from all tabs
      platformTabs.forEach(t => {
        t.classList.remove('active', 'bg-gradient-to-r', 'from-purple-600', 'to-pink-600', 'text-white', 'border-primary');
        t.classList.add('bg-white', 'border-gray-300', 'text-gray-900');
      });
      
      // Add active class to clicked tab
      tab.classList.add('active', 'bg-gradient-to-r', 'text-white', 'border-primary');
      tab.classList.remove('bg-white', 'border-gray-300', 'text-gray-900');
      
      const platform = tab.getAttribute('data-platform');
      
      if (platform === 'instagram') {
        tab.classList.add('from-purple-600', 'to-pink-600');
        if (heroTitle && heroDescription) {
          heroTitle.innerHTML = t.igTitle;
          heroDescription.textContent = t.igDesc;
        }
      } else if (platform === 'tiktok') {
        tab.classList.add('from-black', 'to-cyan-400');
        if (heroTitle && heroDescription) {
          heroTitle.innerHTML = t.ttTitle;
          heroDescription.textContent = t.ttDesc;
        }
      }
    });
  });
</script>

