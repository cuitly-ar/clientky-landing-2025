---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-dark">
    <!-- Grid Pattern -->
    <div class="absolute inset-0 bg-grid-pattern opacity-30"></div>
    
    <!-- Gradient Orbs - Optimized for mobile with reduced blur -->
    <div class="hero-orb absolute top-1/4 -left-32 w-96 h-96 bg-accent-cyan/20 rounded-full"></div>
    <div class="hero-orb absolute bottom-1/4 -right-32 w-96 h-96 bg-accent-purple/20 rounded-full"></div>
    <div class="hero-orb-center absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent-emerald/10 rounded-full"></div>
    
    <!-- Animated Lines - Hidden on mobile for performance -->
    <svg class="hidden md:block absolute inset-0 w-full h-full opacity-20" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="line-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:0" />
          <stop offset="50%" style="stop-color:#00d4ff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:0" />
        </linearGradient>
      </defs>
      <line x1="0" y1="30%" x2="100%" y2="30%" stroke="url(#line-gradient)" stroke-width="1" class="animate-pulse" style="animation-duration: 3s;" />
      <line x1="0" y1="70%" x2="100%" y2="70%" stroke="url(#line-gradient)" stroke-width="1" class="animate-pulse" style="animation-duration: 4s;" />
    </svg>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 py-20 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-dark-100 border border-dark-300 mb-8 opacity-0 animate-fade-in-down">
      <span class="w-2 h-2 rounded-full bg-accent-emerald animate-pulse"></span>
      <span class="text-sm text-text-secondary font-medium">Data & AI Consultancy</span>
    </div>
    
    <!-- Main Headline -->
    <h1 class="font-display font-bold text-4xl md:text-5xl lg:text-6xl xl:text-7xl leading-tight mb-6 opacity-0 animate-fade-in-up delay-100">
      <span class="text-text-primary">{t.hero.headline.split(' ').slice(0, 2).join(' ')}</span>
      <span class="gradient-text"> {t.hero.headline.split(' ').slice(2, 4).join(' ')}</span>
      <span class="text-text-primary"> {t.hero.headline.split(' ').slice(4).join(' ')}</span>
    </h1>
    
    <!-- Subheadline -->
    <p class="text-lg md:text-xl text-text-secondary max-w-3xl mx-auto mb-6 opacity-0 animate-fade-in-up delay-200">
      {t.hero.subheadline}
    </p>
    
    <!-- Supporting Line -->
    <p class="text-base text-text-muted max-w-2xl mx-auto mb-10 opacity-0 animate-fade-in-up delay-300">
      {t.hero.supporting}
    </p>
    
    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 opacity-0 animate-fade-in-up delay-400">
      <a 
        href="#contact" 
        class="group relative px-8 py-4 rounded-2xl bg-gradient-to-r from-accent-cyan to-accent-purple text-white font-semibold text-lg transition-all hover:shadow-xl hover:shadow-accent-cyan/25 hover:scale-105 overflow-hidden"
      >
        <span class="relative z-10">{t.hero.cta}</span>
        <div class="absolute inset-0 bg-gradient-to-r from-accent-purple to-accent-cyan opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </a>
      
      <a 
        href="#about" 
        class="flex items-center gap-2 px-8 py-4 rounded-2xl border border-dark-300 text-text-primary font-medium text-lg hover:bg-dark-100 hover:border-dark-200 transition-all group"
      >
        {t.hero.learnMore}
        <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
    
    <!-- Stats/Trust Indicators -->
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16 mt-20 pt-12 border-t border-dark-200 opacity-0 animate-fade-in-up delay-500">
      <div class="text-center">
        <div class="font-display font-bold text-3xl md:text-4xl text-text-primary mb-1">10+</div>
        <div class="text-sm text-text-muted">{lang === 'en' ? 'Years Experience' : 'AÃ±os de Experiencia'}</div>
      </div>
      <div class="text-center">
        <div class="font-display font-bold text-3xl md:text-4xl text-text-primary mb-1">50+</div>
        <div class="text-sm text-text-muted">{lang === 'en' ? 'Projects Delivered' : 'Proyectos Entregados'}</div>
      </div>
      <div class="text-center">
        <div class="font-display font-bold text-3xl md:text-4xl text-text-primary mb-1">100%</div>
        <div class="text-sm text-text-muted">{lang === 'en' ? 'Results-Focused' : 'Enfocados en Resultados'}</div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in delay-700">
    <div class="flex flex-col items-center gap-2 text-text-muted">
      <span class="text-xs uppercase tracking-widest">{lang === 'en' ? 'Scroll' : 'Desplazar'}</span>
      <div class="w-6 h-10 rounded-full border-2 border-dark-300 flex items-start justify-center p-2">
        <div class="w-1.5 h-1.5 rounded-full bg-accent-cyan animate-bounce"></div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero orbs with optimized blur */
  .hero-orb {
    filter: blur(80px);
    animation: float 6s ease-in-out infinite;
  }
  
  .hero-orb:nth-child(2) {
    animation-delay: 2s;
  }
  
  .hero-orb-center {
    filter: blur(100px);
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }
  
  /* Mobile optimizations - significantly reduce blur */
  @media (max-width: 768px) {
    .hero-orb {
      filter: blur(40px);
      animation: none;
      opacity: 0.6;
    }
    
    .hero-orb-center {
      filter: blur(50px);
      opacity: 0.4;
      width: 300px !important;
      height: 300px !important;
    }
  }
</style>


