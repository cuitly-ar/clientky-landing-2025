---
import { getTranslations, type Language } from '../i18n/translations';
import { getAlternateLanguage, getLocalizedPath, getLanguageName } from '../i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const alternateLang = getAlternateLanguage(lang);
const alternatePath = getLocalizedPath('', alternateLang);
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href={lang === 'en' ? '/' : '/es'} class="flex items-center gap-3 group">
        <img 
          src="/logos/logo-sinfondo.png" 
          alt="Clientky" 
          class="h-8 w-auto transition-transform group-hover:scale-105"
        />
        <span class="font-display font-semibold text-xl text-text-primary">Clientky</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-text-secondary hover:text-text-primary transition-colors text-sm font-medium">
          {t.nav.about}
        </a>
        <a href="#services" class="text-text-secondary hover:text-text-primary transition-colors text-sm font-medium">
          {t.nav.services}
        </a>
        <a href="#approach" class="text-text-secondary hover:text-text-primary transition-colors text-sm font-medium">
          {t.nav.approach}
        </a>
        
        <!-- Language Switcher -->
        <a 
          href={alternatePath}
          class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-dark-100 hover:bg-dark-200 transition-colors text-sm"
        >
          <span class="text-xs">{alternateLang === 'en' ? 'ðŸ‡ºðŸ‡¸' : 'ðŸ‡ªðŸ‡¸'}</span>
          <span class="text-text-secondary">{getLanguageName(alternateLang)}</span>
        </a>
        
        <!-- CTA Button -->
        <a 
          href="#contact" 
          class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-cyan to-accent-purple text-white font-medium text-sm transition-all hover:shadow-lg hover:shadow-accent-cyan/25 hover:scale-105"
        >
          {t.nav.contact}
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-dark-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col gap-4 pt-4 border-t border-dark-200">
        <a href="#about" class="text-text-secondary hover:text-text-primary transition-colors py-2">
          {t.nav.about}
        </a>
        <a href="#services" class="text-text-secondary hover:text-text-primary transition-colors py-2">
          {t.nav.services}
        </a>
        <a href="#approach" class="text-text-secondary hover:text-text-primary transition-colors py-2">
          {t.nav.approach}
        </a>
        
        <div class="flex items-center justify-between pt-4 border-t border-dark-200">
          <a 
            href={alternatePath}
            class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-dark-100 text-sm"
          >
            <span class="text-xs">{alternateLang === 'en' ? 'ðŸ‡ºðŸ‡¸' : 'ðŸ‡ªðŸ‡¸'}</span>
            <span class="text-text-secondary">{getLanguageName(alternateLang)}</span>
          </a>
          
          <a 
            href="#contact" 
            class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-cyan to-accent-purple text-white font-medium text-sm"
          >
            {t.nav.contact}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Header scroll behavior
  const header = document.getElementById('header');
  let lastScrollY = window.scrollY;
  
  window.addEventListener('scroll', () => {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > 50) {
      header?.classList.add('glass', 'shadow-lg', 'shadow-black/10');
    } else {
      header?.classList.remove('glass', 'shadow-lg', 'shadow-black/10');
    }
    
    lastScrollY = currentScrollY;
  });
  
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
  
  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>

<style>
  header {
    transition: all 0.3s ease;
  }
</style>


