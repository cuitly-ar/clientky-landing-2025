---
import type { Language } from '../../i18n/translations';
import Layout from '../../layouts/Layout.astro';
import { getLanguage, t } from '../../i18n/utils';
import BrandMarquee from '../BrandMarquee.astro';

interface Props {
  lang?: Language;
  mode: 'login' | 'reset';
}

const { lang: forcedLang, mode } = Astro.props;
const lang = forcedLang ?? getLanguage(Astro.url);
const isLogin = mode === 'login';
const homeHref = lang === 'en' ? '/en/' : '/';
const loginHref = lang === 'en' ? '/en/login' : '/login';
const resetHref = lang === 'en' ? '/en/reset' : '/reset';

const title = isLogin ? t(lang, 'loginTitle') : t(lang, 'resetTitle');
const description = isLogin ? t(lang, 'loginSubtitle') : t(lang, 'resetSubtitle');

const bulletPoints = [
  {
    icon: 'üëç',
    title: t(lang, 'authSideBullet1Title'),
    description: t(lang, 'authSideBullet1Desc')
  },
  {
    icon: '‚è±Ô∏è',
    title: t(lang, 'authSideBullet2Title'),
    description: t(lang, 'authSideBullet2Desc')
  },
  {
    icon: 'üìà',
    title: t(lang, 'authSideBullet3Title'),
    description: t(lang, 'authSideBullet3Desc')
  }
];
---

<Layout title={`Clientky - ${title}`} description={description} lang={lang}>
  <main class="min-h-screen bg-white flex flex-col lg:flex-row">
    <section class="w-full lg:w-1/2 flex items-center justify-center px-6 py-16">
      <div class="w-full max-w-md space-y-8">
        <a href={homeHref} class="inline-flex items-center gap-2 text-2xl font-bold text-primary">
          Clientky<span class="text-gray-900">.</span>
        </a>
        <div class="space-y-2">
          <h1 class="text-3xl font-bold text-gray-900">{title}</h1>
          <p class="text-gray-500">{description}</p>
        </div>
        <form class="space-y-5">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              {t(lang, 'loginEmailLabel')}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder={t(lang, 'loginEmailPlaceholder')}
              class="w-full border border-gray-200 rounded-2xl px-4 py-3 focus:ring-2 focus:ring-primary/30 focus:border-primary transition-all"
            />
          </div>

          {isLogin && (
            <div>
              <div class="flex items-center justify-between mb-1">
                <label for="password" class="block text-sm font-medium text-gray-700">
                  {t(lang, 'loginPasswordLabel')}
                </label>
                <a href={resetHref} class="text-sm text-primary font-semibold hover:underline">
                  {t(lang, 'loginForgot')}
                </a>
              </div>
              <input
                type="password"
                id="password"
                name="password"
                placeholder={t(lang, 'loginPasswordPlaceholder')}
                class="w-full border border-gray-200 rounded-2xl px-4 py-3 focus:ring-2 focus:ring-primary/30 focus:border-primary transition-all"
              />
            </div>
          )}

          <button type="submit" class="w-full bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-2xl py-3 shadow-lg hover:shadow-xl transition-all">
            {isLogin ? t(lang, 'loginCTA') : t(lang, 'resetCTA')}
          </button>
        </form>
        <div class="text-sm text-gray-500 pt-2">
          {isLogin ? (
            <p>
              {t(lang, 'loginNoAccount')}{' '}
              <a href={homeHref + '#precios'} class="text-primary font-semibold hover:underline">
                {t(lang, 'loginStartGrowth')}
              </a>
            </p>
          ) : (
            <a href={loginHref} class="text-primary font-semibold hover:underline">
              {t(lang, 'resetBack')}
            </a>
          )}
        </div>
      </div>
    </section>

    <section class="w-full lg:w-1/2 bg-gradient-to-br from-primary to-secondary text-white py-16 px-8 flex items-center">
      <div class="max-w-lg mx-auto space-y-8">
        <div>
          <h2 class="text-3xl font-bold leading-tight mb-3">{t(lang, 'authSideTitle')}</h2>
          <div class="w-16 h-1 bg-white/50 rounded-full"></div>
        </div>
        <div class="space-y-6">
          {bulletPoints.map((item) => (
            <div class="flex gap-3">
              <div class="text-2xl">{item.icon}</div>
              <div>
                <p class="font-semibold">{item.title}</p>
                <p class="text-white/80 text-sm leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
        <div class="pt-6 space-y-4">
          <p class="text-xs font-semibold tracking-[0.3em] text-white/70">
            CON LA CONFIANZA DE 35,000+ INSTAGRAMMERS Y BUSINESSES
          </p>
          <BrandMarquee variant="dark" />
        </div>
      </div>
    </section>
  </main>
</Layout>

