---
import { getLanguage } from '../i18n/utils';

const currentLang = getLanguage(Astro.url);
const currentPath = Astro.url.pathname;
const flags = {
  es: '/icons/flag-es.svg',
  en: '/icons/flag-us.svg'
} as const;
---

<div class="relative inline-block" data-current-path={currentPath}>
  <button 
    id="lang-toggle"
    class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors duration-300 text-gray-700 font-medium"
    aria-label="Select language"
    aria-haspopup="true"
  >
    <img src={flags[currentLang]} alt={currentLang === 'es' ? 'Español' : 'English'} class="h-5 w-7 rounded-sm border border-gray-200" loading="lazy" />
    <span class="sr-only">{currentLang === 'es' ? 'Español' : 'English'}</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  
  <div 
    id="lang-dropdown"
    class="hidden absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50"
  >
    <button 
      data-lang="es"
      class="lang-option flex items-center gap-3 px-4 py-2 hover:bg-gray-100 transition-colors duration-200 w-full text-left"
      class:list={[currentLang === 'es' && 'bg-purple-50 text-primary font-semibold']}
    >
      <img src={flags.es} alt="" class="h-5 w-7 rounded-sm border border-gray-200" loading="lazy" />
      <span>Español</span>
      {currentLang === 'es' && <span class="ml-auto text-primary">✓</span>}
    </button>
    <button 
      data-lang="en"
      class="lang-option flex items-center gap-3 px-4 py-2 hover:bg-gray-100 transition-colors duration-200 w-full text-left"
      class:list={[currentLang === 'en' && 'bg-purple-50 text-primary font-semibold']}
    >
      <img src={flags.en} alt="" class="h-5 w-7 rounded-sm border border-gray-200" loading="lazy" />
      <span>English</span>
      {currentLang === 'en' && <span class="ml-auto text-primary">✓</span>}
    </button>
  </div>
</div>

<script>
  const toggle = document.getElementById('lang-toggle');
  const dropdown = document.getElementById('lang-dropdown');
  const langOptions = document.querySelectorAll('.lang-option');
  
  toggle?.addEventListener('click', (e) => {
    e.stopPropagation();
    dropdown?.classList.toggle('hidden');
  });
  
  document.addEventListener('click', () => {
    dropdown?.classList.add('hidden');
  });
  
  function buildPathForLang(targetLang: string | null) {
    const currentUrl = new URL(window.location.href);
    const pathname = currentUrl.pathname;
    const stripped = pathname.replace(/^\/(en|es)(?=\/|$)/, '');
    let normalized = stripped || '/';
    if (!normalized.startsWith('/')) {
      normalized = `/${normalized}`;
    }
    if (targetLang === 'en') {
      return normalized === '/' ? '/en' : `/en${normalized}`;
    }
    return normalized;
  }
  
  langOptions.forEach(option => {
    option.addEventListener('click', () => {
      const newLang = option.getAttribute('data-lang');
      const currentUrl = new URL(window.location.href);
      const nextPath = buildPathForLang(newLang);
      currentUrl.pathname = nextPath.endsWith('/') ? nextPath : `${nextPath}/`;
      currentUrl.searchParams.delete('lang');
      window.location.href = currentUrl.toString();
    });
  });
</script>

