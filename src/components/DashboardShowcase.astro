---
import { getLanguage, t } from '../i18n/utils';

const lang = getLanguage(Astro.url);
const isSpanish = lang === 'es';

const actions = [
  t(lang, 'dashboardAction1'),
  t(lang, 'dashboardAction2'),
  t(lang, 'dashboardAction3'),
  t(lang, 'dashboardAction4'),
  t(lang, 'dashboardAction5'),
  t(lang, 'dashboardAction6')
];

const cards = [
  {
    title: t(lang, 'dashboardCardOrdersTitle'),
    description: t(lang, 'dashboardCardOrdersDesc')
  },
  {
    title: t(lang, 'dashboardCardAddonsTitle'),
    description: t(lang, 'dashboardCardAddonsDesc')
  }
];

const dashboardImages = [
  {
    src: isSpanish ? '/media/dashboard/instagram-growth-es.png' : '/media/dashboard/instagram-growth-en.png',
    alt: isSpanish ? 'Crecimiento de seguidores en español' : 'Followers growth dashboard in English'
  },
  {
    src: isSpanish ? '/media/dashboard/track-growth-es.png' : '/media/dashboard/track-growth-en.png',
    alt: isSpanish ? 'Reporte de analytics en español' : 'Analytics report in English'
  }
];
---

<section class="py-20 md:py-28 bg-white" id="tiktok">
  <div class="container mx-auto px-6 lg:px-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <p class="text-sm uppercase tracking-[0.3em] text-primary font-semibold mb-3">Dashboard</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{t(lang, 'dashboardTitle')}</h2>
        <p class="text-lg text-gray-600 mb-8">{t(lang, 'dashboardSubtitle')}</p>
        <ul class="space-y-3">
          {actions.map((action) => (
            <li class="flex items-start gap-3 text-gray-700">
              <span class="text-primary text-xl font-bold">•</span>
              <span>{action}</span>
            </li>
          ))}
        </ul>
      </div>
      <div class="space-y-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {cards.map((card) => (
            <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-100 rounded-3xl p-6 shadow-lg">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">{card.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{card.description}</p>
            </div>
          ))}
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {dashboardImages.map((image) => (
            <div class="bg-white border border-gray-100 rounded-3xl p-3 shadow-xl">
              <img src={image.src} alt={image.alt} class="w-full rounded-2xl border border-gray-100" loading="lazy" />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

