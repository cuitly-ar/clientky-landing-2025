---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const principleIcons = [
  // Business-First
  `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
  </svg>`,
  // Collaborative
  `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
  </svg>`,
  // Results-Driven
  `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
  </svg>`,
  // Pragmatic
  `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
  </svg>`,
];
---

<section id="approach" class="relative py-24 md:py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark">
    <div class="absolute inset-0 bg-grid-pattern opacity-20"></div>
    <div class="section-orb absolute top-1/2 -translate-y-1/2 right-0 w-[800px] h-[800px] bg-accent-purple/5 rounded-full"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Text Content -->
      <div>
        <!-- Tag -->
        <div class="flex items-center gap-3 mb-6 animate-on-scroll animate-fade-in-up">
          <div class="w-12 h-[2px] bg-gradient-to-r from-accent-purple to-transparent"></div>
          <span class="text-accent-purple font-mono text-sm uppercase tracking-wider">{t.approach.tag}</span>
        </div>
        
        <!-- Title -->
        <h2 class="font-display font-bold text-3xl md:text-4xl lg:text-5xl text-text-primary mb-8 animate-on-scroll animate-fade-in-up">
          {t.approach.title}
        </h2>
        
        <!-- Description -->
        <p class="text-lg text-text-secondary mb-6 leading-relaxed animate-on-scroll animate-fade-in-up">
          {t.approach.description}
        </p>
        
        <!-- Highlight -->
        <div class="relative p-6 rounded-2xl bg-gradient-to-r from-accent-purple/10 to-accent-cyan/10 border border-accent-purple/20 animate-on-scroll animate-fade-in-up">
          <div class="absolute -top-3 -left-3 w-6 h-6 rounded-lg bg-accent-purple flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <p class="text-text-primary font-medium leading-relaxed">
            {t.approach.highlight}
          </p>
        </div>
      </div>
      
      <!-- Principles Grid -->
      <div class="grid sm:grid-cols-2 gap-6">
        {t.approach.principles.map((principle, index) => (
          <div 
            class="group relative p-6 rounded-2xl bg-dark-50 border border-dark-200 hover:border-dark-100 transition-all duration-500 animate-on-scroll animate-fade-in-up"
            style={`animation-delay: ${index * 100}ms;`}
          >
            <!-- Number Badge -->
            <div class="absolute -top-3 -right-3 w-8 h-8 rounded-lg bg-gradient-to-br from-accent-purple to-accent-cyan flex items-center justify-center text-white font-display font-bold text-sm">
              {index + 1}
            </div>
            
            <!-- Icon -->
            <div class="w-12 h-12 rounded-xl bg-dark-200 border border-dark-300 flex items-center justify-center mb-4 text-accent-purple group-hover:scale-110 transition-transform duration-300">
              <Fragment set:html={principleIcons[index]} />
            </div>
            
            <!-- Content -->
            <h3 class="font-display font-semibold text-lg text-text-primary mb-2">
              {principle.title}
            </h3>
            <p class="text-sm text-text-muted leading-relaxed">
              {principle.description}
            </p>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Visual Connector -->
    <div class="hidden lg:flex items-center justify-center mt-20">
      <div class="flex items-center gap-4">
        <div class="h-[1px] w-24 bg-gradient-to-r from-transparent to-dark-300"></div>
        <div class="flex items-center gap-3 px-6 py-3 rounded-full bg-dark-50 border border-dark-200">
          <div class="w-2 h-2 rounded-full bg-accent-cyan animate-pulse"></div>
          <span class="text-sm text-text-muted font-medium">
            {lang === 'en' ? 'Strategic Vision' : 'Visión Estratégica'}
          </span>
          <svg class="w-4 h-4 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
          <span class="text-sm text-text-muted font-medium">
            {lang === 'en' ? 'Technical Execution' : 'Ejecución Técnica'}
          </span>
          <svg class="w-4 h-4 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
          <span class="text-sm text-text-muted font-medium">
            {lang === 'en' ? 'Real Results' : 'Resultados Reales'}
          </span>
          <div class="w-2 h-2 rounded-full bg-accent-emerald animate-pulse"></div>
        </div>
        <div class="h-[1px] w-24 bg-gradient-to-l from-transparent to-dark-300"></div>
      </div>
    </div>
  </div>
</section>


